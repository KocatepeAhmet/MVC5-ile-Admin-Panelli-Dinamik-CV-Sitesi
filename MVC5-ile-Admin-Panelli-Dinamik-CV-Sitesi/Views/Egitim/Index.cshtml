@using WebApplication1.Models.Entity
@model List<egitimler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Eğitim Listesi</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>id</th>
        <th>Başlık</th>
        <th>Alt Başlık 1</th>
        <th>Alt Başlık 2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.baslik</td>
            <td>@item.altBaslik1</td>
            <td>@item.altBaslik2</td>
            <td>@item.gno</td>
            <td>@item.tarih</td>
            <td>
                <a class="btn btn-danger btn-sm" href="/egitim/EgitimSil/@item.id">
                    <i class="fas fa-trash"></i>
                    Sil
                </a>
            </td>
            <td>
                <a class="btn btn-info btn-sm" href="/egitim/EgitimDuzenle/@item.id">
                    <i class="fas fa-pencil-alt"></i>
                    Düzenle
                </a>
            </td>
        </tr>
    }
</table>
<a href="/egitim/EgitimEkle/" class="btn btn-info">Yeni Eğitim Ekle</a>


